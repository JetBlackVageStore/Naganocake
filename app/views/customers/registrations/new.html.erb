<div class="container">
  <div class="row">
    <h2 class="header-background col-xs-3 col-xs-offset-2">新規会員登録</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row">
        <div class="col-xs-2 col-xs-offset-2">
          <%= f.label :"名前" %>
        </div>
        <div class="col-xs-3">
          <%= f.label :"(姓)", class: "col-xs-4"%>
          <%= f.text_field :surname %>
        </div>
        <div class="col-xs-3">
          <%= f.label :"(名)", class: "col-xs-4"%>
          <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname" %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-2 col-xs-offset-2">
          <%= f.label :"フリガナ" %>
        </div>
        <div class="col-xs-3">
          <%= f.label :"(セイ)", class: "col-xs-4"%>
          <%= f.text_field :surname_kana %>
        </div>
        <div class="col-xs-3">
          <%= f.label :"(メイ)", class: "col-xs-4"%>
          <%= f.text_field :firstname_kana, autofocus: true, autocomplete: "firstname_kana" %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-2 col-xs-offset-2">
          <%= f.label :"メールアドレス" %>
        </div>
        <div class="col-xs-3">
          <span class="col-xs-offset-4"></span>
          <%= f.text_field :email %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-2 col-xs-offset-2">
          <%= f.label :"郵便番号" %>
        </div>
        <div class="col-xs-3">
          <span class="col-xs-offset-4"></span>
          <%= f.text_field :postal_code %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-2 col-xs-offset-2">
          <%= f.label :"住所" %>
        </div>
        <div class="col-xs-3">
          <span class="col-xs-offset-4"></span>
          <%= f.text_field :address, :size => "62*60" %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-2 col-xs-offset-2">
          <%= f.label :"電話番号" %>
        </div>
        <div class="col-xs-3">
          <span class="col-xs-offset-4"></span>
          <%= f.text_field :phone_number %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-2 col-xs-offset-2">
          <%= f.label :"パスワード(6文字以上)" %>
        </div>
        <div class="col-xs-3">
          <span class="col-xs-offset-4"></span>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-2 col-xs-offset-2">
          <%= f.label :"パスワード(確認用)" %>
        </div>
        <div class="col-xs-3">
          <span class="col-xs-offset-4"></span>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
          <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
        </div>
      </div>
  <% end %>
</div>