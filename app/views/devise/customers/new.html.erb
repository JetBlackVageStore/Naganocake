<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: customer_registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   
    <%= f.label :"名前" %>
    <%= f.label :"(姓)" %>
    <%= f.text_field :surname %>
    <%= f.label :"(名)"
    <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname" %>
  
    
    <%= f.label :"フリガナ" %>
    <%= f.label :"(セイ)" %>
    <%= f.text_field :surname_kana %>
    <%= f.label :"(メイ)"
    <%= f.text_field :firstname_kana, autofocus: true, autocomplete: "firstname_kana" %>
  
    
    <%= f.label :"メールアドレス" %>
    <%= f.text_field :email%>

    
　  <%= f.label :"郵便番号" %>
    <%= f.text_field :postal_code %>

    <%= f.label :"住所" %>
    <%= f.text_field :address %>

    <%= f.label :"電話番号" %>
    <%= f.text_field :phone_number %>
    
    <%= f.label :"パスワード(6文字以上)" %>
    <%= f.password_field :password, autocomplete: "new-password" %>

    <%= f.label :"パスワード(確認用)" %>
    <%= f.password_field :password, autocomplete: "new-password" %>

    <%= f.submit "新規登録" %>
  <% end %>
  
  


