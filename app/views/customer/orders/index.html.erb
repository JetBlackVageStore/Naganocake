
<div class="container">
  <div calss="row">
    <h2 class="header-background col-xs-3 col-xs-offset-2">注文履歴一覧</h2>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <% if @orders.present? %>
      <table class="table table-hover table-bordered table-condensed">
        <thead>
          <tr class="info">
            <th><i class="fas fa-calendar-day"></i>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
      		    <%= order.created_at.strftime('%Y/%m/%d') %>
      		  </td>
      		  <td class="text-left">
      		    <%= order.postal_code %><br>
      		    <%= order.address %><br>
      		    <%= order.addressee %>
      		  </td>
      		  <td>
      		    <% order.order_items.each do |order_item| %>
      		    <%= order_item.item.name %><br>
      		    <% end %>
      		  </td>
      		  <td class="text-right">
      		    <%= (@sum + 800).to_s.reverse.gsub( /(\d{3})(?=\d)/, '\1,').reverse %>円
      		  </td>
      		  <td>
      		    <%= order.order_status %>
      		  </td>
           	<td>
         	    <%= link_to "表示する", order_path(order), class: "glyphicon glyphicon btn btn-primary" %>
         	  </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
        <p>注文履歴がありません。</p>
      <% end %>
    </div>

  </div>
</div>
