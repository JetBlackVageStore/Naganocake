<div calss="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center">注文履歴一覧</h2>


    <table class="table table-hover table-bordered table-condensed">
      <thead>
      <tr class="info">
        <th><i class="fas fa-calendar-day"></i>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= order.created_at.strftime('%Y/%m/%d') %>
          </td>
          <td class="text-left">
            <%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.addressee %>
          </td>
          <td>
            <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %><br>
            <% end %>
          </td>
          <td class="text-right">
            <%= order.item_price.to_s(:delimited) %>円
          </td>
          <td>
            <%= order.order_status %>
          </td>
          <td>
            <%= link_to "表示", order_path(order), class: "glyphicon glyphicon-zoom-in btn btn-success" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>


  </div>
</div>
