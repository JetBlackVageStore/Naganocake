<% if admin_signed_in? %>
  <div class="container">
    <div class="row">
      <div class="col-xs-offset-2 col-xs-8">
        <h2>管理者画面</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-offset-1 col-xs-10">
        <h3>
          本日の注文件数は
          <%= link_to admin_orders_path do %>
            <%= @today_orders.count %>
          <% end %>
          件です。
        </h3>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <div>
          <%= render "customer/items/search", genres: @genres %>
        </div>
      </div>

    <!--<div class="row top-text">-->
      <div class="col-xs-9">

        <div class="row background">
          <div class="row top-text-box">
            <h4>
              Welcome NaganoCake !!<br>
              このサイトは、ケーキ販売のECサイトになります。<br>
              会員でない方も商品の閲覧はできますが、<br>
              購入には会員登録が必要になります。<br>
            </h4>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12">
            <h2>オススメ商品</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="recommend-items">
              <% @item.each do |item| %>
              <div class="recommend-items-box">
                <div class="item-images-box">
                  <%= link_to item_path(item) do %>
                    <%= attachment_image_tag item, :image, size: "200x160" , format: 'jpg' %>
                  <% end %>
                </div>
                <div class="item-name-box">
                  <%= item.name %>
                </div>
                <div class="item-price_with-box">
                  ¥<%= item.price_without.to_s.reverse.gsub( /(\d{3})(?=\d)/, '\1,').reverse %>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= link_to "もっと見る", items_path, class: "btn-link  pull-right" %>
  </div>
<% end %>