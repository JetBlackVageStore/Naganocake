<div class="name-search">
<table class="table table-bordered genre-table">
    <thead>
      <tr>
        <th>ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name, search_items_path('search[value]': genre.id, 'search[how]': "match") %>
        </td>
      </tr>
    <% end %>
    </tbody>
</table>
</div>


<h2>商品一覧</h2>
<h2>全<%= @items.count %>件</h2>
 <% @items.each do |item| %>
  <% if item.genre.genre_status == true %>
    <%= link_to item_path(item.id) do %>
     <%= attachment_image_tag(item, :image, size: "300x200") %>
      <%= item.name %>
    <% end %>
     <% if item.item_status == true %>
       <p>¥<%= item.price_without.to_s(:delimited) %></p>
      <% elsif item.item_status == false %>
       <p>売り切れ中</p>
     <% end %>
 <% end %>
 
<div><%= paginate(@products) %></div>
	
