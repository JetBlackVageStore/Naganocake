<div class="row">
  <div class="col-xs-12">
    <h2 >登録情報編集</h2>
      <%= form_with(model:@customer, url:customer_path(current_customer), local: true ,method: :patch) do |f| %>

      <div class="col-xs-10">

        <div class="col-xs-12">
          <%= f.label :"名前" %>
          <%= f.label :"(姓)" %>
          <%= f.text_field :surname %>
          <%= f.label :"(名)" %>
          <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname" %>
        </div>

        <div class="col-xs-12">
          <%= f.label :"フリガナ" %>
          <%= f.label :"(セイ)" %>
          <%= f.text_field :surname_kana %>
          <%= f.label :"(メイ)" %>
          <%= f.text_field :firstname_kana, autofocus: true, autocomplete: "firstname_kana" %>
        </div>

        <div class="col-xs-12">
          <%= f.label :"メールアドレス" %>
          <%= f.text_field :email %>
        </div>

        <div class="col-xs-12">
          <%= f.label :"郵便番号" %>
          <%= f.text_field :postal_code %>
        </div>

        <div class="col-xs-12">
          <%= f.label :"住所" %>
          <%= f.text_field :address %>
        </div>

        <div class="col-xs-12">
          <%= f.label :"電話番号" %>
          <%= f.text_field :phone_number %>
        </div>
      </div>

        <div class="actions col-xs-9 col-xs-offset-3">
          <%= f.submit "編集内容を保存する", class: "btn btn-primary save col-xs-6" %>
          <%= link_to "退会する", unsubscribe_customers_path, class: "glyphicon glyphicon-tint btn btn-danger" %>
        </div>

      <% end %>

    </div>
  </div>
