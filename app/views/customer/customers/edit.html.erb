<h2>登録情報編集</h2>
  <%= form_with(model:@customer, url:customer_path, local: true ,method: :patch) do |f| %>
  
    <div col-xs-12>
      <%= f.label :"名前" %>
      <%= f.label :"(姓)" %>
      <%= f.text_field :surname %>
      <%= f.label :"(名)" %>
      <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname" %>
    </div>
  
      <%= f.label :"フリガナ" %>
      <%= f.label :"(セイ)" %>
      <%= f.text_field :surname_kana %>
      <%= f.label :"(メイ)" %>
      <%= f.text_field :firstname_kana, autofocus: true, autocomplete: "firstname_kana" %>
  
      <%= f.label :"メールアドレス" %>
      <%= f.text_field :email %>
  
      <%= f.label :"郵便番号" %>
      <%= f.text_field :postal_code %>
  
      <%= f.label :"住所" %>
      <%= f.text_field :address %>
  
      <%= f.label :"電話番号" %>
      <%= f.text_field :phone_number %>
      
      <%= f.submit "編集内容を保存する" %>
      <%= link_to "退会する", unsubscribe_customers_path %>
      
  <% end %>
