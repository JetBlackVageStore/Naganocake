<div class="container">
  <div class="row">
    <h2 class="header-background col-xs-2 col-xs-offset-2">マイページ</h2>
  </div>

  <div class="row strong">
  	<div class="col-xs-offset-1 col-xs-1">
      <strong>登録情報</strong>
    </div>
    <div class="col-xs-1">
      <%= link_to "編集する", customers_edit_customers_path, class: "btn btn-primary" %>
    </div>
    <div class="col-xs-1">
      <%= link_to "パスワードを変更する", edit_customer_registration_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-7 col-xs-offset-1">
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td class="th">氏名</td>
            <td><%= full_name(@customer) %></td>
          </tr>
          <tr>
            <td class="th">カナ</td>
            <td><%= kana_full_name(@customer) %></td>
          </tr>
          <tr>
            <td class="th">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td class="th">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="th">電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td class="th">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row strong">
    <div class="col-xs-1 col-xs-offset-1">
      <strong>配送先</strong>
    </div>
    <div class="col-xs-1">
      <%= link_to " 一覧を見る", add_deliveries_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-1 col-xs-offset-1">
      <strong>注文履歴</strong>
    </div>
    <div class="col-xs-1">
      <%= link_to " 一覧を見る", orders_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>