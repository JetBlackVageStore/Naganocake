
<div class="row">
	<div class="col-xs-offset-1 col-xs-8">
    <h2>マイページ</h2>
      <strong>登録情報</strong>
      <%= link_to "編集する", customers_edit_customers_path, class: "glyphicon glyphicon-pencil btn btn-success"  %>
      <%= link_to "パスワードを変更する", edit_customer_registration_path, class: "glyphicon glyphicon-pencil btn btn-warning" %>
      
        <table>
          <tbody>
            <tr>
              <td>氏名</td>
              <td><%= full_name(@customer) %></td>
            </tr>
            <tr>
              <td>カナ</td>
              <td><%= kana_full_name(@customer) %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @customer.phone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
            
            <P><strong>配送先</strong>
    					<%= link_to " 一覧を見る", add_deliveries_path, class: "glyphicon glyphicon-folder-open btn btn-info" %>
    				</p>
    				<p><strong>注文履歴</strong>
    					<%= link_to " 一覧を見る", orders_path, class: "glyphicon glyphicon-folder-open btn btn-info" %>
    				</p>
          </tbody>
        </table>
    
    </div>
  </div>
