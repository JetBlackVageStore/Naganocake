<div class="container">
  <div class="row">
    <h2 class="header-background col-xs-2 col-xs-offset-1">配送先編集</h2>
  </div>

  <%= form_with model: @add_delivery, local: true do |f| %>

  <div class="row">
    <div class="col-xs-2">
      <%= f.label :"郵便番号(ハイフンなし)" %>
    </div>
    <div class="col-xs-4">
      <%= f.text_field :postal_code %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2">
      <%= f.label :"住所" %>
    </div>
    <div class="col-xs-4">
      <%= f.text_field :address, :size => "60*60" %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2">
      <%= f.label :"宛名" %>
    </div>
    <div class="col-xs-4">
      <%= f.text_field :addressee %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-offset-8 col-xs-2">
      <%= f.submit "編集する", class:"btn btn-primary btn-md btn-block" %>
    </div>
  </div>
  <% end %>
</div>