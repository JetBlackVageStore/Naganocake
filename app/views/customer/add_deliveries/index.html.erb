<div class="container">
  <div class="row">
    <h2 class="header-background col-xs-3 col-xs-offset-1">配送先登録/一覧</h2>
  </div>
  <div class="row">
  <%= form_with(model: @add_delivery, :url => {:controller => "customer/add_deliveries"}) do |f| %>
    <div class="row">
      <div class="form-group col-xs-2">
        <%= f.label :"郵便番号(ハイフンなし)" %>
      </div>
      <div class="form-group col-xs-2">
        <%= f.text_field :"postal_code" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-xs-2">
        <%= f.label :"住所" %>
      </div>
      <div class="form-group col-xs-2">
        <%= f.text_field :"address", :size => "60*60" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-xs-2">
        <%= f.label :"宛名" %>
      </div>
      <div class="form-group col-xs-2">
        <%= f.text_field :"addressee" %>
      </div>
      <div class="col-xs-offset-3 col-xs-2">
        <%= f.submit "登録する",class: " pull-right btn-lg btn-success " %>
      </div>
    </div>

  <% end %>
  </div>

  <div class="row">
    <div class="col-xs-7">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @add_deliveries.each do |add_delivery| %>
          <tr><%= add_delivery.id %>
            <td><%= add_delivery.postal_code %></td>
            <td><%= add_delivery.address %></td>
            <td><%= add_delivery.addressee %></td>
            <td>
              <%= link_to "編集する",edit_add_delivery_path(add_delivery), class: "btn btn-primary" %>
            </td>
            <td>
              <%= link_to "削除する",add_delivery_path(add_delivery), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, remote: true, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>