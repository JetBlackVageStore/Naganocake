
<div class="container">
  <h3>注文履歴詳細</h3>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="order-customer">
        <h4>購入者</h4>
        <%= @order.customer.name %>
      </div>
      <div class="order-address">
        <h4>配送先</h4>
        <%= @order.address %>
      </div>
      <div class="order-pay">
        <h4>支払い方法</h4>
        <%= @order.payjp_id %>
      </div>
      <div class="order-status">
        <h4>注文ステータス</h4>

      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-2">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.name %>
            </td>
            <td>
              <%=  %>
            </td>
            <td>
              <%= item.count %>
            </td>
            <td>
              <%= %> * <%= item.count %>
            </td>
            <td>

            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
