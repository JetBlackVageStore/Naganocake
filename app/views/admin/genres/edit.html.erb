<div class="container">
  <div class="row">
    <h3 class="header-background col-xs-2 col-xs-offset-2">ジャンル編集</h3>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-1">
      <%= form_with model: @genre, url: admin_genre_path(@genre), local: true do |f| %>
        <%= f.label :ジャンル %>
        <%= f.text_field :genre_name, class: 'genre_name' %>
        <%= f.radio_button :genre_status, :true %>
        <%= f.label :genre_status, "有効", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :genre_status, :false %>
        <%= f.label :genre_status, "無効", {value: :false, style: "display: inline-block;"} %>
        <%= f.submit '変更を保存する', class: 'btn btn-info' %>
      <% end %>
    </div>
  </div>
</div>