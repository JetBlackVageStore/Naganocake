<div class="container">
  <div class="row">
    <h3 class="header-background col-xs-3 col-xs-offset-1">ジャンル一覧・追加</h3>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <div>
          <%= f.label :ジャンル %>
          <%= f.text_field :genre_name, class: 'genre_name' %>
          <%= f.radio_button :genre_status, :true %>
          <%= f.label :genre_status, "有効", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :genre_status, :false %>
          <%= f.label :genre_status, "無効", {value: :false, style: "display: inline-block;"} %>
          <%= f.submit '追加', class: 'btn btn-info' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <table class="table table-hover table-inverse">
        <thead>
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.genre_name %></td>
            <td>
              <% if genre.genre_status == TRUE %>
                <%= '有効' %>
              <% else %>
                <%= '無効' %>
              <% end %>
            </td>
            <td class="edit-btn">
              <%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-primary' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
