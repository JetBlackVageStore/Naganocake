<%= render "layouts/header" %>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h4>商品一覧</h4>
    <%= link_to "＋", new_admin_item_path, class: "pull-right btn" %>
    <div class="product_list">
      <table class="table table-hover table-inverse">
        <thead>
        <tr class="active">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
        </thead>

        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to product.name, admin_item_path(product) %>
            </td>
            <td>
              <%= product.price_without %>
            </td>
            <td>
              <%= product.genre.name %>
            </td>
            <td>
              <% if product.item_status == true %>
                <%= "販売中" %>
              <% else %>
                <%= "販売中止" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        <%= paginate @items %>
        </tbody>
      </table>

    </div>
  </div>
</div>