<div class="container">
  <div class="row">
    <h2 class="header-background col-xs-2 col-xs-offset-1">商品一覧</h2>
  </div>

  <div class=row>
    <div class="col-xs-offset-8 col-xs-1">
      <%= link_to "＋", new_admin_item_path, class: "btn btn-default add-item-btn" %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="product_list">
        <table class="table table-hover table-inverse">
          <thead>
          <tr class="active">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
          </thead>

          <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                <%= item.id %>
              </td>
              <td>
                <%= link_to item.name, admin_item_path(item) %>
              </td>
              <td>
                <%= item.price_without %>
              </td>
              <td>
                <%= item.genre %>
              </td>
              <td>
                <% if item.item_status == true %>
                  <%= "販売中" %>
                <% else %>
                  <%= "販売中止" %>
                <% end %>
              </td>
            </tr>
          <% end %>
          <%= paginate @items %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

