<div class="container">
  <div class="row">
    <h2 class="header-background col-xs-2 col-xs-offset-1">商品詳細</h2>
  </div>

  <div class="row">
    <div class="col-xs-4 col-md-offset-1">
      <%= attachment_image_tag(@item, :image, size: '370x260', fallback: "no_image.jpg") %>
    </div>

    <div class="col-xs-6">
      <div class="row">
        <div class="col-xs-4">
          <h4>商品名</h4>
        </div>
        <div class="col-xs-8">
          <h4>
            <%= @item.name %>
          </h4>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4">
          <h4>商品説明</h4>
        </div>
        <div class="col-xs-8">
          <h4>
            <%= @item.specifcation %>
          </h4>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4">
          <h4>ジャンル</h4>
        </div>
        <div class="col-xs-8">
          <h4>
            <%= @genre.genre_name %>
          </h4>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4">
          <h4>税込価格(税抜価格)</h4>
        </div>
        <div class="col-xs-8">
          <h4>
            <%= @item.plus_tax %>
            (<%= @item.price_without %>)円
          </h4>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4">
          <h4>販売ステータス</h4>
        </div>
        <div class="col-xs-8">
          <h4>
            <% if @item.item_status == true %>
              <%= "販売中" %>
            <% else %>
              <%= "販売中止" %>
            <% end %>
          </h4>
        </div>
      </div>
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-info pull-right btn-lg" %>
    </div>
  </div>
</div>