 <table class="table table-hover table-inverse">
  <thead>
    <tr class="active">
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td>
        <%= item.id %>
      </td>
      <td>
        <%= link_to item.name, admin_item_path(item) %>
      </td>
      <td>
        <%= item.price_without %>
      </td>
      <td>
        <%= item.genre_id %>
      </td>
      <td>
        <% if item.item_status == true %>
          <%= "販売中" %>
        <% else %>
          <%= "販売中止" %>
        <% end %>
      </td>
    </tr>
    <% end %>
    <%= paginate @items %>
  </tbody>
</table>
