<div class="row">
  <div class="col-xs-offset-1 col-xs-11">
    <h4 class="header-background"><%= @customer.surname %><%= @customer.firstname %>さんの会員情報編集</h4>

    <%= form_for(@customer, url:admin_customer_path, method: :patch) do |f| %>
      <div class="row form-group">
        <label class="control-label col-md-2">会員ID</label>
        <div class="col-md-3">
          <%= @customer.id %>
        </div>
      </div>

      <div class="row form-group">
        <label class="control-label col-md-2">氏名</label>
        <div class="col-md-6">
          <%= f.text_field :surname, autofocus: true, autocomplete: "last_name" %>
          <%= f.text_field :firstname, autofocus: true, autocomplete: "first_name" %>
        </div>
      </div>

      <div class="row form-group">
        <label class="control-label col-md-2">フリガナ</label>
        <div class="col-md-6">
          <%= f.text_field :surname_kana, autofocus: true, autocomplete: "last_name_kana" %>
          <%= f.text_field :firstname_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </div>
      </div>

      <div class="row form-group">
        <label class="control-label col-md-2">郵便番号</label>
        <div class="col-md-3">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
      </div>

      <div class="row form-group">
        <label class="control-label col-md-2">住所</label>
        <div class="col-md-3">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "60*60" %>
        </div>
      </div>

      <div class="row form-group">
        <label class="control-label col-md-2">電話番号</label>
        <div class="col-md-3">
          <%= f.telephone_field :phone_number, autofocus: true, autocomplete: "phone" %>
        </div>
      </div>

      <div class="row form-group">
        <label class="control-label col-md-2">メールアドレス</label>
        <div class="col-md-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="row form-group">
        <div class="col-md-3">
          <%= f.label :"会員ステータス" %>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "有効", {value: :false, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "退会済み", {value: :true, style: "display: inline-block;"} %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit '変更を保存する' ,class: "btn btn-primary" %>
      </div>
    <% end %>
    </table>
  </div>
</div>