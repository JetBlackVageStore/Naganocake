<div class="container">
  <div class="row">
    <h2 class="header-background col-xs-2 col-xs-offset-1">会員一覧</h2>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <table class="table table-hover table-inverse">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer) do %>
                <%= customer.surname %> <%= customer.firstname %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_active == TRUE %>
                <%= '有効' %>
              <% else %>
                <%= '退会' %>
              <% end %>
            </td>
        <% end %>
      </table>
    </div>
  </div>
</div>